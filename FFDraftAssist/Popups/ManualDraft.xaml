<Window x:Class="FFDraftAssist.ManualDraft"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManualDraft" Height="206" Width="300" Padding="5" WindowStartupLocation="CenterScreen">
    <Canvas>
        <Label Content="Manual Draft Entry" VerticalAlignment="Top" Canvas.Left="10" Width="272" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="16"/>

        <Label Content="Player Name" VerticalAlignment="Top" Canvas.Left="10" Canvas.Top="40" FontWeight="Bold"/>
        <TextBox x:Name="txtPlayerName" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="185" Canvas.Left="97" Canvas.Top="44"/>

        <Label Content="Position" VerticalAlignment="Top" Canvas.Left="36" Canvas.Top="70" FontWeight="Bold"/>
        <ComboBox x:Name="cboPosition" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="185" Canvas.Left="97" Canvas.Top="74">
            <ComboBoxItem Content="QB"/>
            <ComboBoxItem Content="RB"/>
            <ComboBoxItem Content="WR"/>
            <ComboBoxItem Content="TE"/>
            <ComboBoxItem Content="DEF"/>
            <ComboBoxItem Content="K"/>
        </ComboBox>
        <Button Content="Done" Canvas.Left="10" Canvas.Top="133" Width="272" Height="31" FontWeight="Bold" FontSize="16" Click="Button_Click"/>

    </Canvas>
</Window>
